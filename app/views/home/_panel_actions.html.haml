.panel.panel-actions
  .panel-body
    -##action-bar.btn-toolbar{:role => 'toolbar'}
    .pull-right
      %button#make-pdf.btn-success.text-center.btn-lg{ tabindex: 5, type: 'submit' }
        Generate PDF
    .pull-left
      .btn-group{:role => 'group', 'aria-label': 'Action Group'}
        .dropdown-menu{'aria-labelledby' => 'save-settings-group'}
          %a.dropdown-item{:href => '#', id: 'save'}    Save Current Settings
          %a.dropdown-item{:href => '#', id: 'restore'} Recall Previously Saved Settings
          %a.dropdown-item{:href => '#', id: 'clear'}   Reset Form to Defaults
        %button#save-settings-group.btn-lg.btn-info.dropdown-toggle{'aria-expanded': false, 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :type => 'button'}
          Settings
    .clear
