= render 'home/modals/advanced_info'
= render 'home/modals/introduction'
= render 'home/modals/thickness'
= render 'home/partials/alert'

#action-status.ui-widget-content.ui-corner-all

= form_tag('/', method: 'post', novalidate: true, remote: true, id: 'pdf-generator') do
  .row
    .col-sm-0.col-md-0.col-lg-0.col-xl-1
    .col-sm-12.col-md-6.col-lg-4.col-xl-3
      = render 'home/panels/units'
    .col-sm-12.col-md-6.col-lg-4.col-xl-4
      = render 'home/panels/dimensions'
    .col-sm-12.col-md-12.col-lg-4.col-xl-3
      = render 'home/panels/advanced'
    .col-sm-0.col-md-0.col-lg-0.col-xl-1

.row#ad-content-donate{style: 'display: none;'}
  .col-sm-0.col-md-0.col-lg-1.col-xl-2
  .col-sm-12.col-md-12.col-lg-10.col-xl-8.text-center.ad-panel
    = render 'home/panels/donate'
  .col-sm-0.col-md-0.col-lg-1.col-xl-2

.row#ad-content-refine{style: 'display: none;'}
  .col-sm-0.col-md-0.col-lg-1.col-xl-2
  .col-sm-12.col-md-12.col-lg-10.col-xl-8.text-center.ad-panel
    = render 'home/panels/refine'
  .col-sm-0.col-md-0.col-lg-1.col-xl-2

.row#ad-content-adsense{style: 'display: none;'}
  .col-sm-0.col-md-0.col-lg-1.col-xl-2
  .col-sm-12.col-md-12.col-lg-10.col-xl-8.text-center.ad-panel
    = render 'home/partials/adsense' if Rails.env.production?
  .col-sm-0.col-md-0.col-lg-1.col-xl-2

.spacer-50

.row
  .col-sm-0.col-md-1.col-lg-2.col-xl-2
  .col-sm-12.col-md-10.col-lg-8.col-xl-8
    #disqus_thread
      = render 'home/partials/disqus_js' if Rails.env.production?
  .col-sm-0.col-md-1.col-lg-2.col-xl-2
