= render 'modal_advanced_info'
= render 'modal_introduction'
= render 'modal_thickness'
= render 'alert_error'

.row
  .col-sm-0.col-md-0.col-lg-1.col-xl-1
  .col-sm-12.col-md-12.col-lg-10.col-xl-10
    = render 'panel_donate'
  .col-sm-0.col-md-0.col-lg-1.col-xl-1

= form_tag('', method: 'post', novalidate: true, id: 'pdf-generator') do
  .row
    .col-sm-0.col-md-0.col-lg-0.col-xl-1
    .col-sm-12.col-md-6.col-lg-4.col-xl-3
      = render 'panel_units'
    .col-sm-12.col-md-6.col-lg-4.col-xl-4
      = render 'panel_dimensions'
    .col-sm-12.col-md-12.col-lg-4.col-xl-3
      = render 'panel_advanced'
    .col-sm-0.col-md-0.col-lg-0.col-xl-1
  .row
    .col-sm-0.col-md-1.col-lg-2.col-xl-3
    .col-sm-12.col-md-10.col-lg-8.col-xl-6
      = render 'panel_actions'
    .col-sm-0.col-md-1.col-lg-2.col-xl-3

  = if Rails.env.production?
    .row
      .col-sm-0.col-md-1.col-lg-2.col-xl-2
      .col-sm-12.col-md-10.col-lg-8.col-xl-8
        = render 'disqus'
      .col-sm-0.col-md-1.col-lg-2.col-xl-2

