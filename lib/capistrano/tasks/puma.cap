namespace :puma do
  task :setup do
    invoke "#{fetch(:target_os)}:puma:init"
  end

  desc 'Start puma'
  task :start do
    on roles(:app) do
      execute <<-EOF
        cd #{release_path}
        source ~/.bashrc
        export APP=#{fetch(:application)}
        export RAILS_ENV=#{fetch(:rails_env)}
        #{release_path}/exe/puma-start
      EOF
    end
  end
end
